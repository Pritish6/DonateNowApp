<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Hospital.fragmentscreens.ReviewRequest">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewReviewRequest"
        android:src="@drawable/ic_donatenow"

        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/ruby_image_holder_review_request"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/imageViewReviewRequest"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"

            android:layout_marginTop="20dp"

            android:id="@+id/imageViewRubyHall"
            android:src="@drawable/ruby_hall_icon"

            />
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "RUBY HALL CLINIC"
            android:layout_marginTop="34dp"
            android:layout_marginStart="25dp"

            android:id = "@+id/RubyHallText"


            android:textColor = "@color/black"
            android:textSize = "25dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/reviewrequestText"
        android:layout_below="@id/ruby_image_holder_review_request"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="REVIEW REQUEST"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/buttonheaderHolder"
        android:layout_centerInParent="true"
android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/reviewrequestText"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:minHeight="20dp"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:minWidth="20dp"
        android:padding="20dp"
        android:background="@drawable/rectangular_text"
        android:text="IN PROGRESS"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:minHeight="20dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="20sp"

            android:minWidth="20dp"
            android:padding="20dp"
            android:background="@drawable/rectangular_text_grey"
            android:text="COMPLETED"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal"
android:id="@+id/dataRow1"
    android:layout_marginStart="15dp"
    android:layout_below="@+id/buttonheaderHolder"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/ic_plus_icon"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="28_July-2021"
        android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="0.2"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:text=">"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/dataRow2"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/dataRow1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_plus_icon"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="29_July-2021"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text=">"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>